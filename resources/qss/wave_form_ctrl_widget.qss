WaveformCtrlWidget {
    background-color: #f8f9fa;
    font-family: 'Segoe UI', 'Microsoft YaHei UI', sans-serif;
}

/* === 质感工具提示样式 === */
QToolTip {
    background-color: #f8f9fa;
    color: #212529;
    border: 1px solid #e9ecef;
    border-radius: 4px;
    padding: 6px 10px;
    font-size: 11px;
    font-weight: 600;
    font-family: 'Segoe UI', 'Microsoft YaHei UI', sans-serif;
}

/* === 添加通道按钮 === */
QPushButton#m_pAddChannelButton {
    background-color: #f8f9fa;
    color: #495057;
    border: 1px solid #e9ecef;
    border-radius: 4px;
    padding: 4px 8px;
    font-size: 12px;
    font-weight: 500;
    min-height: 24px;
    qproperty-icon: url(:/resources/icons/add_series.svg);
    qproperty-iconSize: 24px;
}

QPushButton#m_pAddChannelButton:hover {
    background-color: #e9ecef;
    border-color: #dee2e6;
}

QPushButton#m_pAddChannelButton:pressed {
    background-color: #dee2e6;
    border-color: #ced4da;
}

